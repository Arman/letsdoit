<div class="container">

  <div class="row">
    <div class="span16">
    <h3> Activity engine! </h3>
    </div>
  </div>

  <%= render :partial => "searches/form"%>

  <div class="row"><div class="span16">&nbsp</div></div>
  <div class="row">
    <div class="span16">
      <h3><%= @list_header %> </h3>
    </div>
  </div>
  <div class="row">
    <div class="span16">
      <% if @activities.empty? then %>
        <div class="row"><div class="span16">No activities matched your search. Try another search or <%= link_to 'add a new activity', new_activity_path %></div>
      <% else %>
        <div class="row"><div class="span16">&nbsp</div></div>
        <div class="row">
          <div class="span16">
            <%= render :partial => "shared/activity", :collection => @activities %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  
</div>
 




