<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% @activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="clearfix">
  <ol>
    <li>Select activity</li>
    <li>Select location</li>
    <li>Enter date and time</li>
    <li>Public, private</li>
    <li>Review</li>
  </ol>
</div>

  <div class="clearfix">
    <%= f.label 'Activity', :for => "xlInput" %>
    <div class="input">   
       <%= f.collection_select(:category_id, Category.all, :id, :name, { :prompt => true }) %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :venue_id, :for => "xlInput" %>
    <div class="input">   
       <%= f.collection_select(:venue_id, Venue.all, :id, :name, { :prompt => true }) %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :name, :for => "xlInput" %>
    <div class="input">   
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :description, :for => "xlInput" %>
     <div class="input">
      <%= f.text_area :description, :rows => '3', :class => 'xlarge' %>
    </div>
  </div> 

  <div class="clearfix">
    <%= f.label :starts_at, :for => "xlInput" %>
    <div class="input"> 
      <input class="hasdatetimepicker" id="activity[starts_at]" name="activity_starts_at" type="text">      
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :ends_at, :for => "xlInput" %>
    <div class="input"> 
      <input class="hasdatetimepicker" id="activity[ends_at]" name="activity_ends_at" type="text">      
    </div>
  </div>

  <div class="clearfix">
    <div class="input">
      <%= f.submit "Go!", :class =>"btn small primary" %>
    </div>
  </div>  
<% end %>
