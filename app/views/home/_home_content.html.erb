<div class="container">

  <%= render :partial => "searches/form"%>

  <hr/>
  <div class="row">
    <div class="span16">
      <h4> Latest Events: </h4>
    </div>
  </div>
  <div class="row">
    <div class="span16">
     <%= render :partial => "shared/activity", :collection => @activities %>
    </div>
  </div>

  <hr/>
  <div class="row">
    <div class="span16">
      <h4> Newest Venues: </h4>
    </div>
  </div>
  <div class="row">
    <div class="span16">
      <div class = "row" >   
          <% @venues.each do |v| %>
            <%= '</div><div class = "row">'.html_safe if (@venues.index(v)+1)%3 == 1   %>
            <div class="span4">
              <b><%= link_to v.name, new_search_path( :search_for => '', :category_id => v.id  ) %> <%= v.categories.size.to_s%></b>
            </div>
            <%= '<div class="span1">&nbsp</div>'.html_safe unless (@venues.index(v)+1)%3 == 0 %>
          <% end %>
      </div>
    </div>
  </div>

  <hr/>
 
  <div class="row">
    <div class="span16">
      <p><%= link_to 'New venue', new_venue_path %></p>
      <p><%= link_to 'New event', new_event_path %></p>
    </div>
  </div>
</div>
 




